<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>{{ meta.title }}</title>

    {% include "./icons.njk" %}

    <link rel="stylesheet" href="{{ meta.path.toRoot }}css/styles.css">
    <link rel="stylesheet" href="{{ meta.path.toRoot }}css/sg.css">

    {% include "./webfonts.njk" %}
  </head>
  <body class="sg-background">

    {% include sgNav %}

    <header class="sg-header">
      {% include sgHeader %}
    </header>

    <main class="sg-body">
      {% for section in sgSections %}{% include section %}{% endfor %}
    </main>

    <footer class="sg-footer">
      {% include sgFooter %}
    </footer>

    <script src="{{ meta.path.toRoot }}js/sg.js"></script>
    <script src="https://cdn.polyfill.io/v2/polyfill.min.js?features=fetch"></script>
    <script src="{{ meta.path.toRoot }}js/scripts.js"></script>
  </body>
</html>
